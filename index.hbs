{{!-- Layout --}}
{{!< default}}

{{!-- custom Styles For tag <body> --}}
{{#contentFor "special_body_class"}}{{#is "home"}}is-home{{/is}} is-frontpage{{/contentFor}}

<div class="godo-f-story u-relative u-overflowHidden">
    {{!-- Featured Image --}}
    {{#if @site.cover_image}}
        <img class="u-absolute0 u-image"
            {{!-- srcset="{{img_url @site.cover_image size="xxs"}}" --}}
            srcset="{{img_url @site.cover_image size="s"}} 300w,
                    {{img_url @site.cover_image size="m"}} 600w,
                    {{img_url @site.cover_image size="l"}} 1000w,
                    {{img_url @site.cover_image size="xl"}} 2000w"
            sizes="(max-width: 800px) 400px, (max-width: 1170px) 700px, 1400px"
            src="{{img_url @site.cover_image size="m"}}"
            alt="{{title}}"
        />
        <div class="u-primaryGradient u-absolute0 zindex2"></div>
    {{/if}}

    <div class="container u-relative zindex3">
        <div class="row">
            <div class="col s12 m10 l8">
                {{#if @site.logo}}
                    <img class="site-logo" src="{{img_url @site.logo size="l"}}" alt="{{@site.title}}" />
                {{else}}
                    {{@site.title}}
                {{/if}}
                <h1 class="u-underline u-relative u-fontSizeLargest u-lineHeightTight u-fontWeightMedium u-md-fontSize36 u-textColorWhite">{{@site.description}}</h1>
            </div>
        </div>
    </div>
</div>

<div class="site-post feed-entry-content">
    <div class="feed-entry-wrap u-maxWidth1100 container">
        <div class="row">
            {{#foreach posts visibility="all"}}
                {{#has number="1"}}
                    <div class="col s12 m6 l12 ss1">{{> "story/story-grid" }}</div>
                {{else has number="5, 6, 17, 18"}}
                    <div class="col s12 m6 ss2">{{> "story/story-grid" }}</div>
                {{else has number="13, 16"}}
                    <div class="col s12 l7 ss3 u-marginBottom15">{{> "story/story-cover" }}</div>
                {{else has number="14, 15"}}
                    <div class="col s12 l5 ss4 u-marginBottom15">{{> "story/story-cover" }}</div>
                {{else}}
                    <div class="col s12 m6 l4">{{> "story/story-grid"}}</div>
                {{/has}}
            {{/foreach}}
        </div>
    </div>
</div>