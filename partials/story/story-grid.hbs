<article class="story u-relative">
    <figure class="story-image u-relative u-borderLighter u-bgColorGrayLight u-block u-overflowHidden">
        <a href="{{url}}" class="u-block">
            {{!-- Imagenes --}}
            {{#if feature_image}}
                <img class="story-img u-absolute u-image u-block blur-up lazyload"
                    src="{{img_url feature_image size="l"}}"
                    srcset="{{img_url feature_image size="xxs"}}"
                    data-srcset="{{img_url feature_image size="s"}} 300w, {{img_url feature_image size="m"}} 600w, {{img_url feature_image size="l"}} 1000w"
                    data-sizes="(max-width: 1000px) 400px, 600px"
                    alt="{{title}}"
                />
            {{else}}
                <img class="story-img u-absolute u-image u-block blur-up lazyload"
                    src="{{img_url feature_image size="l"}}"
                    srcset="{{img_url feature_image size="xxs"}}"
                    data-srcset="{{img_url feature_image size="s"}} 300w, url({{asset "images/default-bnr.jpg"}}) 600w, {{img_url feature_image size="l"}} 1000w"
                    data-sizes="(max-width: 1000px) 400px, 600px"
                    alt="{{title}}"
                />
            {{/if}}
        </a>

        {{!-- Category --}}
        {{#if primary_tag}}{{#primary_tag}}
            <span class="story-category"><a href="{{url}}" title="{{t "Go to"}} {{name}}" class="button button--primary button--xs">{{name}}</a></span>
        {{/primary_tag}}{{/if}}
    </figure>

    <div class="story-body u-paddingTop20 u-flexColumnTop">
        {{!-- Helper Date Time and Reading --}}
        {{!-- {{> "helper/helper-datetime" class="story-date u-marginBottom10 u-fontSize15 u-lineHeight1 u-textMuted"}} --}}

        <h2 class="story-title u-fontSizeLarge u-contentTitle"><a href="{{url}}" class="u-block">{{title}}</a></h2>
        <p class="story-excerpt u-fontSizeBase u-marginBottom20">
            <a href="{{url}}" class="u-block">{{excerpt words="30"}}</a>
        </p>

        {{!-- Read more --}}
        {{!-- <a href="{{url}}" class="link-more u-fontSize15 u-fontWeightMedium">{{t "Read more"}}</a> --}}

        {{#if tags}}
            <div class="post-tags buttonSet u-marginTop30">
                {{#foreach tags from="2" to="4"}}<a href="{{url absolute="true"}}" title="{{name}}" class="button button--tags godo-tracking" data-event-category="Article" data-event-action="Tags" data-event-label="{{name}}" data-event-non-interaction="true">{{name}}</a>{{/foreach}}
            </div>
        {{/if}}
    </div>

</article>